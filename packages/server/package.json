{
  "name": "@pooky/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn run dev",
    "dev": "cross-env NODE_ENV=development yarn run dev:nodemon",
    "dev:nodemon": "nodemon --config nodemon.json",
    "dev:node": "node dist/server.js",
    "build": "babel --root-mode upward --no-comments -d dist src/",
    "heroku-postbuild": "yarn --production=false && yarn workspaces run build",
    "postinstall": "yarn run build",
    "lint": "eslint --ext js src/",
    "lint:fix": "eslint --fix --ext js src/"
  },
  "dependencies": {
    "@pooky/datastore": "*",
    "@pooky/structures": "*"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0"
  }
}
